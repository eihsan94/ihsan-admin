{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "es2019"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".", // This must be specified if you want to specify "paths"
    "paths": {
      "@lib": [
        "../lib/index.ts"
      ]
    },
  },
  "types": [
    "node",
    "aws-sdk"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}